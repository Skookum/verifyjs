*
  padding 0
  margin 0

@import 'mixins'

html
  background #fff
  color #444
  font 14px verdana

body
  padding 0px

h1
  font-size 1.5em
  padding 20px
  margin 0
  border-bottom 3px solid #aaa

ul
  list-style none

  li
    padding 10px
    border-bottom 1px solid #aaa
    background rgba(0,0,0,0.1)
    cursor pointer
    position relative
    &:hover
      background rgba(0,0,0,0.3)
    .filename
      font-size 1.2em
      font-weight bold
    .num_errors
      position absolute
      top 2px
      right 2px
      color #ccc
      font-size 2em
    ul.errors
      font-family monospace
      margin 0 5px
      overflow hidden
      height 0
      padding 0 5px
      background rgba(0,0,0,0.7)
      color #85de6b
      li
        border none
        padding 0 5px
        background none
        margin 0
  li.open
    background rgba(0,0,0,0.3)
    ul.errors
      overflow auto
      height 200px
      margin 10px 5px 5px
      padding 5px
      li
        padding inherit

.all_transitions
  transition(all .2s ease-in-out)
  -webkit-transform-style preserve-3d