*
  padding 0
  margin 0

@import 'mixins'

html
  background #fff
  color #444
  font 14px verdana

body
  padding 0px
  overflow hidden

h1
  font-family Arial
  font-size 2.5em
  padding 20px
  color #ddd
  height 40px

h2
  font-size 1.3em
  padding 10px
  height 25px
  margin 0
  background #333
  color #aaa
  clear both
  position relative
  span.filter
    float right
    clear none
    font-size 0.7em
    font-weight 100
    background rgba(255,255,255,0.2)
    border 1px solid #555
    padding 2px 15px
    cursor pointer


ul
  list-style none

ul.summary
  padding 10px
  position absolute
  top 10px
  right 10px
  text-align right
  color #999
  li
    margin-bottom 5px

ul.files
  position absolute
  top 125px
  left 0
  right 0
  bottom 0
  overflow auto
  li.file
    padding 0px
    border-bottom 1px solid #aaa
    background rgba(0,0,0,0.1)
    cursor pointer
    position relative
    &:hover
      background rgba(0,0,0,0.3)
    &.highlight
      color red
    .filename
      font-size 1.2em
      font-weight bold
      padding 10px
    .num_errors
      position absolute
      top 2px
      right 2px
      color #ccc
      font-size 2em
    .complexity
      position absolute
      top 2px
      right 52px
      color red
      font-size 2em
    ul.errors
      font-family monospace
      margin 0 5px
      overflow hidden
      height 0
      padding 0 5px
      background rgba(0,0,0,0.7)
      color #85de6b
      li.error
        padding 0 5px
  li.file.open
    background rgba(0,0,0,0.3)
    ul.errors
      overflow auto
      height 200px
      margin 10px 5px 5px
      padding 5px
      li
        padding inherit
        &:hover
          background rgba(0,0,0,0.3)
        &.highlight
          color red

.modal
  position absolute
  top 100%
  left 0
  right 0
  bottom 0
  transition(all .2s)
  -webkit-transform-style preserve-3d
  .content
    position absolute
    top 10%
    left 20%
    right 20%
    height 2000px
    padding 30px
    background #fff
    box-shadow 0 30px 20px 5px rgba(0,0,0,0.5)
    li
      padding 10px 0
  &.open
    transition(all .5s ease-in)
    top 0

.all_transitions
  transition(all .3s ease-in-out)
  -webkit-transform-style preserve-3d